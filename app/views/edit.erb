<form method="post" action="/articles/<%=@article.id%>">
    <p><input type="hidden" name="_method" value="patch"></p>
    <p><input id="title" type="text" name="article[title]" value="<%= @article.title %>"></p>
    <p><input id="content" type="text" name="article[content]" value="<%= @article.content %>"></p>
    <p><input type="submit"></p>
</form>